<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <style>
          #FooterLayout {
          
            border: 2px solid purple;
            text-align: center;
            background-color: purple;
        }

        .header {
            overflow: hidden;
            background-color: purple;
            padding: 20px 10px;
        }

            .header a {
                float: left;
                color: white;
                text-align: center;
                padding: 12px;
                text-decoration: none;
                font-size: 20px;
                line-height: 25px;
                border-radius: 4px;
            }

                .header a.logo {
                    font-size: 25px;
                    font-weight: bold;
                }

                .header a:hover {
                    background-color: black;
                    color: white;
                }



        .header-right {
            float: right;
        }

        @@media screen and (max-width: 500px) {
            .header a {
                float: none;
                display: block;
                text-align: left;
            }

            .header-right {
                float: none;
            }
        }
        .paragraph{
            padding-left:30px;
            
        }
        #h1{
            padding-left:30px;
            font-size:20px;
           
             font-family:'Bell MT';
        }
    </style>
</head>
<body>
    <div class="header">
        <a href="http://localhost:52960/PaymentMVC/IndexView" class="logo"><img src="~/Images/logo.jpg" width="200" height="50" /></a>
        <div class="header-right">
            <a>@Html.ActionLink("Prepaid", "PrePaidView", "PaymentMVC")</a>
            <a>@Html.ActionLink("Postpaid", "PostPaid", "PaymentMVC")</a>
            <a>@Html.ActionLink("AboutUs", "AboutUs", "PaymentMVC")</a>
            <a>@Html.ActionLink("ContactUs", "ContactUs", "PaymentMVC")</a>
            <a>@Html.ActionLink("Login", "Login", "PaymentMVC")</a>
            <a>@Html.ActionLink("Register", "Register", "PaymentMVC")</a>
           

        </div>
    </div>
    <div>
        @RenderBody()
    </div>
    <div id="FooterLayout">
        <p style="color:lightgray;">Copyright@Airphone by Team</p>
    </div>
</body>
</html>
