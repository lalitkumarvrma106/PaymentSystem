<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
  
 

    <style>
         .header {
            overflow: hidden;
            background-color: purple;
            padding: 20px 10px;
        }

            .header a {
                float: left;
                color: white;
                text-align: center;
                padding: 12px;
                text-decoration: none;
                font-size: 20px;
                line-height: 25px;
                border-radius: 4px;
            }

                .header a.logo {
                    font-size: 25px;
                    font-weight: bold;
                }

                .header a:hover {
                    background-color: black;
                    color: white;
                }



        .header-right {
            float: right;
        }

        @@media screen and (max-width: 500px) {
            .header a {
                float: none;
                display: block;
                text-align: left;
            }

            .header-right {
                float: none;
            }
        }
         .container {
            border-radius: 5px;
            background-color:white;
            padding: 5px;
        }
         #left{
              float:left;
              padding:0px;
               font-size:20px;
            font-family:'Bell MT';
          }
          #right{
              float:right;
              padding-right:5em;
          }
          #FooterLayout {
          margin-top:405px;
            border: 2px solid purple;
            text-align: center;
            background-color: purple;
        }
          
    </style>
</head>
<body>
    <div class="header">
        <a href="http://localhost:52960/PaymentMVC/IndexView" class="logo"><img src="~/Images/logo.jpg" width="200" height="65" /></a>
        <div class="header-right">
            <a>@Html.ActionLink("Prepaid", "PrePaidView", "PaymentMVC")</a>
            <a>@Html.ActionLink("Postpaid", "PostPaid", "PaymentMVC")</a>
            <a>@Html.ActionLink("AboutUs", "AboutUs", "PaymentMVC")</a>
            <a>@Html.ActionLink("ContactUs", "ContactUs", "PaymentMVC")</a>
            <a>@Html.ActionLink("Login", "Login", "PaymentMVC")</a>
            <a>@Html.ActionLink("Register", "Register", "PaymentMVC")</a>

        </div>
    </div>
    <div class="container">
        <div class="row">

            <div class="col-sm-6" id="left">
                <img src="~/Images/register.jpg" style="height:400px;" >

            </div>

            <div class="col-sm-6" id="right">@RenderBody() </div>
        </div>
    </div>
    <div id="FooterLayout">
        <p style="color:lightgray;">Copyright@Airphone by Team</p>
    </div>
</body>
</html>
